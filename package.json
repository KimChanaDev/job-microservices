{
  "name": "job-microservices",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "workspaces": [
    "apps/auth",
    "apps/jobs",
    "apps/executor",
    "apps/products",
    "libs/common",
    "libs/graphql",
    "libs/grpc",
    "libs/prisma",
    "libs/pulsar"
  ],
  "scripts": {
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start:debug": "nest start --debug --watch",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/job-microservices/test/jest-e2e.json",
    "prisma:generate:auth": "npm run prisma:generate --workspace=apps/auth",
    "prisma:generate:jobs": "npm run prisma:generate --workspace=apps/jobs",
    "prisma:migrate:auth": "npm run prisma:migrate --workspace=apps/auth",
    "prisma:migrate:jobs": "npm run prisma:migrate --workspace=apps/jobs",
    "generate-ts-proto": "protoc --plugin=./node_modules/.bin/protoc-gen-ts_proto.cmd --ts_proto_out=./libs/grpc/src/types --ts_proto_opt=nestJs=true --ts_proto_opt=exportCommonSymbols=false --proto_path=./libs/grpc/src/proto ./libs/grpc/src/proto/*.proto",
    "build:auth": "nest build auth",
    "build:jobs": "nest build jobs",
    "build:executor": "nest build executor",
    "build:products": "nest build products",
    "build:all": "npm-run-all --parallel build:auth build:jobs build:executor build:products",
    "start:auth": "nest start auth --watch",
    "start:auth:prod": "node dist/apps/auth/main.js",
    "start:jobs": "nest start jobs --watch",
    "start:jobs:prod": "node dist/apps/jobs/main.js",
    "start:executor": "nest start executor --watch",
    "start:executor:prod": "node dist/apps/executor/main.js",
    "start:products": "nest start products --watch",
    "start:products:prod": "node dist/apps/products/main.js",
    "start:dev": "concurrently -n AUTH,JOBS,EXECUTOR,PRODUCTS -c blue,green,yellow,magenta \"npm run start:auth\" \"npm run start:jobs\" \"npm run start:executor\" \"npm run start:products\"",
    "drizzle-kit:migrate": "npm run drizzle-kit:migrate --workspace=apps/products",
    "drizzle-kit:full-migrate": "npm run drizzle-kit:full-migrate --workspace=apps/products"
  },
  "dependencies": {
    "@nestjs/common": "^11.0.1",
    "@nestjs/core": "^11.0.1",
    "@nestjs/platform-express": "^11.0.1",
    "@prisma/client": "^6.16.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "fibonacci": "^1.6.12",
    "pino-http": "^10.5.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.10",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@types/express": "^5.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.10.7",
    "@types/passport-jwt": "^4.0.1",
    "@types/supertest": "^6.0.2",
    "concurrently": "^9.2.1",
    "dotenv-cli": "^10.0.0",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "jest": "^30.0.0",
    "npm-run-all": "^4.1.5",
    "pino-pretty": "^13.1.1",
    "prettier": "^3.4.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.4",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "^@app/common(|/.*)$": "<rootDir>/libs/common/src/$1",
      "^@app/graphql(|/.*)$": "<rootDir>/libs/graphql/src/$1",
      "^@app/grpc(|/.*)$": "<rootDir>/libs/grpc/src/$1",
      "^@app/prisma(|/.*)$": "<rootDir>/libs/prisma/src/$1",
      "^@app/pulsar(|/.*)$": "<rootDir>/libs/pulsar/src/$1"
    }
  }
}
