{
  "name": "job-microservices",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start:debug": "nest start --debug --watch",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/job-microservices/test/jest-e2e.json",
    "prisma:generate": "prisma generate --schema ./apps/auth/prisma/schema.prisma",
    "prisma:migrate": "prisma migrate dev --name users_table --schema ./apps/auth/prisma/schema.prisma",
    "generate-ts-proto": "protoc --plugin=./node_modules/.bin/protoc-gen-ts_proto.cmd --ts_proto_out=./libs/grpc/src/types --ts_proto_opt=nestJs=true --proto_path=./libs/grpc/src/proto auth.proto",
    "build:auth": "nest build auth",
    "build:jobs": "nest build jobs",
    "build:executor": "nest build executor",
    "build:all": "npm-run-all --parallel build:auth build:jobs build:executor",
    "start:auth": "nest start auth --watch",
    "start:auth:prod": "node dist/apps/auth/main.js",
    "start:jobs": "nest start jobs --watch",
    "start:jobs:prod": "node dist/apps/jobs/main.js",
    "start:executor": "nest start executor --watch",
    "start:executor:prod": "node dist/apps/executor/main.js",
    "start:dev": "concurrently -n AUTH,JOBS,EXECUTOR -c blue,green,yellow \"npm run start:auth\" \"npm run start:jobs\" \"npm run start:executor\""
  },
  "dependencies": {
    "@golevelup/nestjs-discovery": "^5.0.0",
    "@graphql-yoga/nestjs": "^3.15.2",
    "@grpc/grpc-js": "^1.13.4",
    "@grpc/proto-loader": "^0.8.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/graphql": "^13.1.0",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/microservices": "^11.1.6",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.0.1",
    "@prisma/client": "^6.16.1",
    "bcryptjs": "^3.0.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "cookie-parser": "^1.4.7",
    "fibonacci": "^1.6.12",
    "graphql": "^16.11.0",
    "graphql-type-json": "^0.3.2",
    "graphql-yoga": "^5.15.2",
    "passport-jwt": "^4.0.1",
    "prisma": "^6.16.1",
    "pulsar-client": "^1.14.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "ts-proto": "^2.7.7"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@types/express": "^5.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.10.7",
    "@types/passport-jwt": "^4.0.1",
    "@types/supertest": "^6.0.2",
    "concurrently": "^9.2.1",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "jest": "^30.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.4.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "^@app/common(|/.*)$": "<rootDir>/libs/common/src/$1",
      "^@app/graphql(|/.*)$": "<rootDir>/libs/graphql/src/$1",
      "^@app/grpc(|/.*)$": "<rootDir>/libs/grpc/src/$1",
      "^@app/prisma(|/.*)$": "<rootDir>/libs/prisma/src/$1",
      "^@app/pulsar(|/.*)$": "<rootDir>/libs/pulsar/src/$1"
    }
  }
}
