generator client {
    provider = "prisma-client-js"
    output   = "../../../node_modules/@prisma/client/auth"
}

datasource db {
    provider = "postgresql"
    url      = env("AUTH_DATABASE_URL")
    schemas  = ["auth"]
}

model User {
    id        Int       @id @default(autoincrement())
    email     String    @unique
    password  String
    createdAt DateTime  @default(now())
    updatedAt DateTime? @updatedAt

    @@schema("auth")
}
