{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Auth App",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/@nestjs/cli/bin/nest.js",
      "args": ["start", "auth", "--debug", "--watch"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "envFile": "${workspaceFolder}/.env",
      "skipFiles": ["<node_internals>/**"],
      "sourceMaps": true,
      "outFiles": ["${workspaceFolder}/dist/apps/auth/**/*.js"],
      "runtimeArgs": ["--inspect-brk=9229"],
      "env": {
        "NODE_ENV": "development"
      }
    },
    {
      "name": "Debug Jobs App",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/@nestjs/cli/bin/nest.js",
      "args": ["start", "jobs", "--debug", "--watch"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "envFile": "${workspaceFolder}/.env",
      "skipFiles": ["<node_internals>/**"],
      "sourceMaps": true,
      "outFiles": ["${workspaceFolder}/dist/apps/jobs/**/*.js"],
      "runtimeArgs": ["--inspect-brk=9230"],
      "env": {
        "NODE_ENV": "development"
      }
    },
    {
      "name": "Debug Executor App",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/@nestjs/cli/bin/nest.js",
      "args": ["start", "executor", "--debug", "--watch"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "envFile": "${workspaceFolder}/.env",
      "skipFiles": ["<node_internals>/**"],
      "sourceMaps": true,
      "outFiles": ["${workspaceFolder}/dist/apps/executor/**/*.js"],
      "runtimeArgs": ["--inspect-brk=9231"],
      "env": {
        "NODE_ENV": "development"
      }
    },
    {
      "name": "Debug Products App",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/@nestjs/cli/bin/nest.js",
      "args": ["start", "products", "--debug", "--watch"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "envFile": "${workspaceFolder}/.env",
      "skipFiles": ["<node_internals>/**"],
      "sourceMaps": true,
      "outFiles": ["${workspaceFolder}/dist/apps/products/**/*.js"],
      "runtimeArgs": ["--inspect-brk=9232"],
      "env": {
        "NODE_ENV": "development"
      }
    }
  ],
  "compounds": [
    {
      "name": "Debug All Microservices",
      "configurations": [
        "Debug Auth App",
        "Debug Jobs App", 
        "Debug Executor App",
        "Debug Products App"
      ],
      "stopAll": true,
      "presentation": {
        "group": "microservices",
        "order": 1
      }
    }
  ]
}
